    type(1:2,1) = "thermal","thermal",
    type(1:2,2) = "thermal","thermal",
    uth_bnd(1:3,1,1) = 1.0632e-04, 1.0632e-04, 1.0632e-04, 
    uth_bnd(1:3,2,1) = 1.0703e-04, 1.0703e-04, 1.0703e-04, 
    uth_bnd(1:3,1,2) = 2.0735e-04, 2.0735e-04, 2.0735e-04, 
    uth_bnd(1:3,2,2) = 1.5138e-04, 1.5138e-04, 1.5138e-04, 
}

!----------diagnostic for al----------
