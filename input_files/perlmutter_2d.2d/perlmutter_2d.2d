{
    ndump_fac = 1,
    ndump_fac_temp = 1,
    ndump_fac_ene = 1,
    reports = "charge", "j1", "j2", "j3", "q1", "q2", "q3",
    rep_udist = "uth1", "uth2", "ufl1", "ufl2",
    ndump_fac_pha = 1,
    ps_pmin(1:3) = -0.2, -0.2, -0.05,
    ps_pmax(1:3) = 0.2,  0.2,  0.05,
    
    ps_xmin(1:2) = -10, 350,
